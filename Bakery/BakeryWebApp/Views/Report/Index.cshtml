    @model BakeryWebApp.ViewModels.ReportViewModel

<div class="row">

    <div class="col-md-4">
        <div class="text-left">
            <h1>
                Дневной отчёт
            </h1>
        </div>
        
        @using (Html.BeginForm("Index", "Report", FormMethod.Get))
        {
                <label>Дата</label>
                <input asp-for="DailyDate" />
                <input class="btn btn-outline-dark" type="submit" value="Сформировать суточный отчёт" />
        }
        <div class="text-left">Плановые затраты сырья и материалов в заданную дату</div>
    </div>

    <div class="col-md-4">
        <div class="text-left">
            <h1>
                Отчёт периода
            </h1>
        </div>
        @using (Html.BeginForm("Index", "Report", FormMethod.Get))
        {
            <label>Начало периода</label>
            <input asp-for="BeginDate" />
            <label>Конец периода</label>
            <input asp-for="EndDate" />
            <input class="btn btn-outline-dark" type="submit" value="Сформировать отчёт периода" />
        }
        <div class="text-left">Плановые затраты сырья и материалов в заданный период</div>
    </div>

    <div class="col-md-4">
        <div class="text-left">
            <h1>
                Статистика
            </h1>
        </div>
        @using (Html.BeginForm("Statistic", "Report", FormMethod.Get))
        {
            <input class="btn btn-outline-dark" type="submit" value="Сформировать статистику" />
        }
        <div class="text-left">Плановые затраты сырья и материалов за все время</div>
    </div>

</div>