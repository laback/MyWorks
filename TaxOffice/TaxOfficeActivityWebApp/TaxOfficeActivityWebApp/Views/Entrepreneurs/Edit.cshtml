@model TaxOfficeActivityWebApp.Entrepreneur

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменение</h1>

<h4>Предприниматель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EntrepreneurId" />
            <div class="form-group">
                <label asp-for="TaxOfficeId" class="control-label">Наименование налогового офиса</label>
                <select asp-for="TaxOfficeId" class="form-control" asp-items="ViewBag.TaxOfficeId"></select>
                <span asp-validation-for="TaxOfficeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
